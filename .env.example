# Configuration Guide
# 1. Copy this file and rename it to .env.local
# 2. Update the environment variables below with your actual values

# LiveKit Configuration
# Required for real-time audio/video functionality
# Generate these from LiveKit Cloud Dashboard (https://cloud.livekit.io)
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
LIVEKIT_URL=wss://your-project.livekit.cloud

# UI Configuration
NEXT_PUBLIC_SHOW_SETTINGS_MENU=true
NEXT_PUBLIC_LK_SERVER_URL=http://localhost:3000

# Azure OpenAI Configuration
# Required for AI functionality - Get these from Azure Portal
AZURE_API_KEY=your_azure_openai_api_key
AZURE_BASE_URL=https://your-resource.openai.azure.com
AZURE_RESOURCE_NAME=your-resource-name
AZURE_API_VERSION=2024-02-15-preview

# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgres://user:password@localhost:5432/dbname

# Pinata IPFS Configuration
# Get these from Pinata Dashboard (https://app.pinata.cloud)
PINATA_JWT=your_pinata_jwt_token
PINATA_API_KEY=your_pinata_api_key
PINATA_API_SECRET=your_pinata_api_secret
GATEWAY_URL=https://your-gateway.pinata.cloud
PINATA_GROUP_ID=your_pinata_group_id
PINATA_GATEWAY_KEY=your_pinata_gateway_key

# Public Pinata Configuration
NEXT_PUBLIC_PINATA_GROUP_ID=your_public_pinata_group_id
NEXT_PUBLIC_GATEWAY_URL=https://your-gateway.pinata.cloud
NEXT_PUBLIC_PINATA_GATEWAY_KEY=your_public_gateway_key

# Azure OpenAI Public Configuration
NEXT_PUBLIC_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
NEXT_PUBLIC_AZURE_EMBEDDING_DEPLOYMENT=text-embedding-3-small
NEXT_PUBLIC_AZURE_API_VERSION=2024-02-15-preview
NEXT_PUBLIC_AZURE_EMBEDDING_KEY=your_azure_embedding_key

# Optional Recording Configuration
# Uncomment and configure these if you need recording functionality
# S3_KEY_ID=your_s3_key_id
# S3_KEY_SECRET=your_s3_key_secret
# S3_ENDPOINT=your_s3_endpoint
# S3_BUCKET=your_s3_bucket_name
# S3_REGION=your_s3_region

# Optional Public Configuration
# NEXT_PUBLIC_LK_RECORD_ENDPOINT=/api/record

# Optional Datadog Configuration
# Uncomment and configure these if you're using Datadog
# NEXT_PUBLIC_DATADOG_CLIENT_TOKEN=your_datadog_client_token
# NEXT_PUBLIC_DATADOG_SITE=your_datadog_site

